@page
@model WebTrackED_CHED_MIMAROPA.Pages.Application.Management.CategoryManagement.IndexModel
@{
    ViewData["Title"] = "Category";
    var breadcrump_data = new BreadCrumpViewModel
            {
                pageName = "Category",
                date = DateTime.Now,
                breadCrump = new (string, string?, string, bool, int?)[]
                        {
            ("fa-solid fa-list-check",null,"Management",true,null)
                }
            };
}
@await Component.InvokeAsync("BreadCrump", breadcrump_data)
<div class="row">
    <div class="col-lg-4 col-md-4 col-12 mb-lg-0 mb-md-0 mb-4">
        <div class="rounded-3 overflow-hidden bg-white shadow">
            <div class=" text-white mb-3 d-flex align-items-center justify-content-between px-3 py-2 bg-primary">
                <h5 class="p-0 m-0">Add new category</h5>
                <i class="fa-regular fa-square-plus fs-5"></i>
            </div>
            <form method="post">
                @Html.AntiForgeryToken()
                <div class="px-4">
                    <div class="mb-4">
                        <label asp-for="InputModel.CategoryName" class="fw-bold mb-2"></label><span class="fw-bold text-danger">*</span>
                        <input asp-for="InputModel.CategoryName" class="form-control" placeholder="Enter here.." />
                        <span class="text-danger" asp-validation-for="InputModel.CategoryName"></span>
                    </div>
                    <div class="d-flex gap-2 align-items-center justify-content-end mb-4">
                        <button type="reset" class="btn btn-light">Cancel</button>
                        <button type="submit" id="submitButton" class="btn btn-primary">
                            <span class="button-text">Create</span>
                            <span class="d-none spinner-grow spinner-grow-sm loading-spinner"></span>
                            <span class="d-none loading-text">Loading...</span>
                            <i class="fa-solid fa-plus"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="col-lg-8 col-md-8 col-12">
        <div class="p-2 rounded-3 bg-white shadow ">
            <div class="overflow-x-scroll remove-scrollbar">
                <table id="table-data" class="table table-striped table-hover w-100">
                    <thead class="bg-primary-subtle">
                        <tr>
                            <th>Id</th>
                            <th>Category Name</th>
                            <th>Created At</th>
                            <th>Updated At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="table-group-divider">
                        @foreach (var category in Model.Records)
                        {
                            <tr>
                                <td>@category.Id.ToString("00000")</td>
                                <td>@category.CategoryName</td>
                                <td>@category.AddedAt.ToString("MMM dd, yyy")</td>
                                <td>@category.UpdatedAt.ToString("MMM dd, yyy")</td>
                                <td class="text-nowrap">

                                    <button data-bs-toggle="modal" data-bs-target="#update-category-@(category.Id)" class="rounded-4 btn btn-success"><i class="fa-regular fa-pen-to-square"></i></button>
                                    @await Component.InvokeAsync("UpdateCategory", new { Id = category.Id.ToString() })

                                    <button class="rounded-4 btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@category.Id"><i class="fa-regular fa-trash-can"></i></button>
                                    <partial name="PartialViews/_DeleteDataModal" model="new DeleteModalViewModel(){Id=category.Id.ToString(),returnUrl = null}" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(function(){
            $('#table-data').DataTable();
        })
    </script>
}
