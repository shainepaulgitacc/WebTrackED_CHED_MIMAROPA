@page
@model WebTrackED_CHED_MIMAROPA.Pages.Application.Management.SubCategoryManagement.Subcategory_ProceduresModel
@{
    ViewData["Title"] = "Subcategory";
    var breadcrump_data = new BreadCrumpViewModel
            {
                pageName = "Subcategory",
                date = DateTime.Now,
                breadCrump = new (string, string?, string, bool, int?)[]
                                                {
                ("fa-solid fa-list-check","./Index","Management",false,null),
                ("fa-regular fa-clock",null,"Procedures",true,null)
                                }
            };
}
@await Component.InvokeAsync("BreadCrump", breadcrump_data)
<div class="row">
    <div class="col-lg-4 col-md-4 col-12 mb-lg-0 mb-md-0 mb-4">
        <div class="rounded-3 overflow-hidden bg-white shadow">
            <div class=" text-white mb-3 d-flex align-items-center justify-content-between px-3 py-2 bg-primary">
                <h5 class="p-0 m-0">Add new procedure </h5>
                <i class="fa-regular fa-square-plus fs-5"></i>
            </div>
            <form method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="InputModel.SubCategoryId" value="@Model.SubCategoryId" />
                <div class="px-4">
                    <div class="mb-3">
                        <label asp-for="InputModel.ProcedureTitle" class="fw-bold mb-2"></label><span class="text-danger">*</span>
                        <input asp-for="InputModel.ProcedureTitle" class="form-control" placeholder="Enter here.." />
                        <span class="text-danger" asp-validation-for="InputModel.ProcedureTitle"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="InputModel.Description" class="fw-bold mb-2"></label><span class="text-danger">*</span>
                        <textarea asp-for="InputModel.Description" class="form-control" placeholder="Enter here.."></textarea>
                        <span class="text-danger" asp-validation-for="InputModel.Description"></span>
                    </div>
                    <div class="d-flex gap-2 align-items-center justify-content-end mb-4">
                        <button type="reset" class="btn btn-light">Cancel</button>
                        <button type="submit" id="submitButton" class="btn btn-primary">
                            <span class="button-text">Create</span>
                            <span class="d-none spinner-grow spinner-grow-sm loading-spinner"></span>
                            <span class="d-none loading-text">Loading...</span>
                            <i class="fa-solid fa-plus"></i>
                        </button>
                    </div>
                </div>
            </form>

        </div>
    </div>
    <div class="col-lg-8 col-md-8 col-12">
        <div class="rounded-3 bg-white shadow p-4">
            <div class="d-flex gap-2 justify-content-end">
                <span class="text-secondary fw-bolder">Select All</span>
                <input @(Model.Records?.Count() == 0 ? "disabled" : "") id="select-all" class="form-check-input me-5" type="checkbox" />
            </div>
            <hr />
            <div class="container mb-3 pe-4 overflow-y-scroll" style="height: 380px">
                @if (Model.Records?.Count() > 0)
                {
                    @foreach (var procedure in Model.Records)
                    {
                        <div class="row mb-2">
                            <div class="col-10">
                                <div class="d-flex gap-3">
                                    <div>
                                        <i class="fa-solid fa-file-signature text-primary"></i>
                                    </div>
                                    <p><b>@procedure.ProcedureTitle</b> - @procedure.Description</p>
                                </div>
                            </div>
                            <div class="col-2 d-flex justify-content-end">
                                <input value="@procedure.Id" class="form-check-input me-2  checkbox-item" type="checkbox" />
                            </div>
                        </div>
                    }
                }
                else
                {
                    <h4 class="text-body-secondary mt-3 text-center">No Record</h4>
                }

            </div>
            <hr>
            <div class="d-flex justify-content-end">
                <button @(Model.Records?.Count() == 0 ? "disabled" : "") id="delete-all" class="btn btn-danger">Delete <i class="fa-solid fa-trash-can"></i></button>
                <form method="post" id="form-delete-all" asp-page-handler="DeleteAll" asp-route-pId="@Model.pId">
                    <input asp-for="Ids" type="hidden" id="selected-id" class="form-control" />
                </form>
            </div>
        </div>
    </div>
        
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/DeleteSubCategoryProcedure.js" asp-append-version="true"></script>
}


