<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - WebTrackED_CHED_MIMAROPA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/PartialInformation.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebTrackED_CHED_MIMAROPA.styles.css" asp-append-version="true" />
</head>
<body>
    <partial name="PartialViews/_AlertMessage" />
    @RenderBody()
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/base.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @{
        var validationResult = TempData["validation-message"] as string;
    }
    @if (!string.IsNullOrEmpty(validationResult))
    {
        <script>
            $(document).ready(function () {
                // Show alert after 3 seconds
                setTimeout(function () {
                    $("#alert").addClass("active-alert");
                }, 200);

                // Hide alert after 10 seconds
                setTimeout(function () {
                    $("#alert").removeClass("active-alert");
                }, 10000);


                $("#alert-close").on("click", function () {
                    if ($("#alert").hasClass("active-alert")) {
                        $("#alert").removeClass("active-alert");
                    }
                })
            });
        </script>
    }
</body>
</html>
